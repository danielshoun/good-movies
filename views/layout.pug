html
	head
			block head
				title="Good Movies"
				link(rel='stylesheet' href='/stylesheets/reset.css')
				link(rel='stylesheet' href='/stylesheets/footer.css')
				link(rel='stylesheet' href='/stylesheets/components/nav.css')
				script(src="https://kit.fontawesome.com/258a758bfe.js" crossorigin="anonymous")
				script(src="/javascripts/authButtons.js" type="module")
	body
		nav
			div(id='logo')
				a(href='/')  Good Movies
			ul(class='menu')
				li
					a(href='/') Home
				li
					a(href='/movies') Movies
				li
					a(href='/lists') Lists
				//  Figure out if statement to show Log Out instead of this VVVV when logged in.
				if userId
					li
						a(href='/users/logout') Log Out
				else
					li
						a(href='/users/login') Log In
					li
						a(href='/users/signup') Sign Up

		block content
