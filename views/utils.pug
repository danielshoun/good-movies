mixin pages(pageCount, currentPage)
	.moviePageDiv
		if currentPage != 1
			button(class='buttonPrimary prevBtn' onclick=`window.location.href='/movies?page=${parseInt(currentPage, 10)-1}'`) Prev
		- var n = 1;
		select(class='pageSelect movies-dropdown-list' onChange="window.location.href=this.value")
			//- option(value=`` selected) #{currentPage}
			while n < pageCount
				option(value=`/movies?page=${n}` class='moviePageOption' selected= (n == currentPage))= n
				- ++n
		if currentPage != pageCount - 1
			button(class='buttonPrimary nextBtn' onclick=`window.location.href='/movies?page=${parseInt(currentPage, 10)+1}'`) Next

mixin ratingDiv(prevRating)
	div(class='rating-container' movieId=movie.id prevRating=prevRating)
		input(type='radio' id='star5' name='rate' value='5')
		label(for='star5' title='text') 5 stars
		input(type='radio' id='star4' name='rate' value='4')
		label(for='star4' title='text') 4 stars
		input(type='radio' id='star3' name='rate' value='3')
		label(for='star3' title='text') 3 stars
		input(type='radio' id='star2' name='rate' value='2')
		label(for='star2' title='text') 2 stars
